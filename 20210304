public class Ex02_03 {
   public static void main(String[] args) {
   	final double basicRate = 1.2;
   	basicRate = 1.6;
   	System.out.println("一年期定存利率為 " + (basicRate + 0.1));
   	System.out.println("兩年期定存利率為 " + (basicRate + 0.2));
   }
}



